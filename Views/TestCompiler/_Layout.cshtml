<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap-3.4.1-dist/css/bootstrap.min.css">
    <script src="~/js/jquery.min.js"></script>
    <script src="~/lib/bootstrap-3.4.1-dist/js/bootstrap.min.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <p class="navbar-brand">Administrator</p>
                </div>
                <div class="collapse navbar-collapse" id="myNavbar">
                    <ul class="nav navbar-nav">
                        <li class="active"><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a asp-controller="Home" asp-action="Index">Page 2</a></li>
                        <li><a asp-controller="Home" asp-action="Index">Page 3</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            <a href="#" class="text-dark dropdown-toggle" data-toggle="dropdown">Ro'zimurod Abdunazarov</a>
                            <ul class="dropdown-menu">
                                <li><a asp-controller="Home" asp-action="Index"><span class="glyphicon glyphicon-log-in"></span> Chiqish</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year  yili sayt ishlab chiqilgan.
        </div>
    </footer>

</body>
</html>
