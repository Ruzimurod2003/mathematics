@model HomeIndexViewModel
@{
    Layout = "_Layout";
}

<div class="text-center">
    <p>Asslomu alaykum tizimga hush kelibsiz</p>
    <form asp-controller="Home" asp-action="Index" method="post" class="mt-3">
        <div class="text-center m-2">
            <label asp-for="Login"></label>
            <input asp-for="Login" type="text" />
        </div>
        <div class="text-center m-2">
            <label asp-for="Password"></label>
            <input asp-for="Password" type="password" />
        </div>
        <div class="text-center m-2">
            <button class="btn btn-primary" type="submit">Kirish</button>
        </div>
    </form>
</div>