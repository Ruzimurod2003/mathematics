@model HomeRegisterViewModel

@{
    ViewBag.Title = "Ro'yhatdan o'tish";
}

<form asp-controller="Home" asp-action="Register" method="post" class="mt-3">

    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" placeholder="Ismingizni kiriting" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" type="email" placeholder="Emailingizni kiriting" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Birth" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Birth" type="date" />
            <span asp-validation-for="Birth" class="text-danger"></span>
        </div>
    </div>

        <div class="form-group row">
        <label asp-for="Login" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Login" placeholder="Loginingizni kiriting" />
            <span asp-validation-for="Login" class="text-danger"></span>
        </div>
    </div>

        <div class="form-group row">
        <label asp-for="Password" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Password" type="password" placeholder="Parolingizni kiriting" />
            <span asp-validation-for="Password"  class="text-danger"></span>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Yaratish</button>
        </div>
    </div>

</form>
